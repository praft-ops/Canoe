@{
    Layout = "_Layout";
    ViewData["Title"] = "About";
    ViewData["Welcome"] = "Welcome to Raft Escalator";
    ViewData["Catchy"] = "Float Your Issues Upstream.";
}

<h1>@ViewData["Title"]:</h1>
<h2>@ViewData["Welcome"]</h2>
<h2>@ViewData["Catchy"]</h2>

<h3>This Site is Under Construction!</h3>

<div description="Flex Grid Container" class="container-fluid">
    <div class="row">
        <div class="col-sm">
            Issue Grid Column
        </div>
        <div class="col-sm">
            
            <h2>Issue Display Column</h2>
            <form>
            <!-- Issue ID-->
                <div>
                    <label for="IssueId" align="left">Issue Id: </label>
                    <input type="number" id="IssueId" name="IssueId" placeholder="ID" align="right" disabled="disabled"/>
                </div>

            <!-- Issue Name -->
                <div>
                    <label for="IssueName" align="left">Issue Name: </label>
                    <input type="text" id="IssueId" name="IssueName" align="right" placeholder="Name" disabled="disabled"/>
                </div>

            <!-- Issue Description -->
                <div>
                    <label for="IssueDescription" align="left">Issue Description: </label>
                    <input type="text" id="IssueId" name="IssueDescription" align="right" placeholder="Description" disabled="disabled"/>
                </div>

            <!-- Issue Resolved -->
                <div>
                    <label for="IssueResolved" align="left">Issue Resolved: </label>
                    <input type="checkbox" id="IssueId" name="IssueResolved" align="right" placeholder="Resolved" disabled="disabled">
                </div>
            
            <!-- Created Date-->
                <div>
                    <label for="CreatedDate" align="left">Created Date: </label>
                    <input type="datetime" id="IssueId" name="Created Date" align="right" placeholder="MM/DD/YYYY" disabled="disabled"/>
                </div>

            <!-- Last Modified Date -->
                <div>
                    <label for="LastModifiedDate" align="left">Issue Id: </label>
                    <input type="datetime" id="LastModifiedDate" name="LastModifiedDate" align="right" placeholder="MM/DD/YYYY" disabled="disabled"/>
                </div>
            <!-- Edit/Save Button -->

                    <!-- Edit -->
                    <div>
                    <label for="EditButton" align="left"> Edit Issue: </label>
                    <button type="button" title="Edit" disabled="disabled" id="EditButton" name="EditButton">Edit</button>
                    </div>

                    <!-- Save -->
                    <div>
                    <label for="SaveButton" align="right"> Save Changes: </label>
                    <button type="submit" title="Save" disabled="disabled" id="SaveButton" name="SaveButton">Save</button>
                    </div>
                </>
             </form>
        </div>
    </div>
</div>

